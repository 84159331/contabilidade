rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Regras temporárias para desenvolvimento - permitir acesso sem autenticação
      // ATENÇÃO: Estas regras são apenas para desenvolvimento!
      // Em produção, implemente autenticação adequada
      allow read, write: if true;
    }
  }
}
