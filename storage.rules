rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Biblioteca Digital: leitura p√∫blica das capas/PDFs e upload apenas autenticado
    match /biblioteca/livros/{allPaths=**} {
      allow read: if true;
      allow delete: if request.auth != null;
      allow create, update: if request.auth != null && request.resource.size < 10 * 1024 * 1024;
    }

    // Demais arquivos do Storage: somente autenticado
    match /{allPaths=**} {
      allow read, delete: if request.auth != null;
      allow create, update: if request.auth != null && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
