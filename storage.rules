rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Biblioteca Digital: leitura p√∫blica das capas/PDFs e upload apenas autenticado
    match /biblioteca/livros/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Demais arquivos do Storage: somente autenticado
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
