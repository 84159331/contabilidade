{
  "extends": ["config:base"],
  "schedule": ["before 6am on monday"],
  "timezone": "America/Sao_Paulo",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
